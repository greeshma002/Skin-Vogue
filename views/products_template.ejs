<% productData.forEach(product => { %>
    <div class="col-sm-6 col-md-4 col-lg-3" data-price="<%= product.productPrice %>">
      <div class="box">
        <a href="">
          <div class="img-box">
            <a href="/detail/<%= product._id %>"><img src="<%= product.images[0] %>" alt=""></a>
          </div>
          <div class="detail-box">
            <h6>
              <%= product.productName %>
            </h6>
            <h6>
              Price
              <span>
                $<%= product.productPrice %>
              </span>
            </h6>
          </div>
          <div class="new">
            <span>
              New
            </span>
          </div>
        </a>
      </div>
    </div>
    <% }); %>
<section>
  <h2>Order Details</h2>
  <table>
    <tr>
      
      <th>User Name</th>
      <th>Total Amount</th>
      <th>Order Status</th>
      <th>Action</th>
    </tr>
    <% orders.forEach(order => { %>
      <tr>
        
        <td><%= order.userId.name %></td>
        <td><%= order.totalAmount %></td>
        <td><%= order.orderStatus %></td>
        <td>
          <a href="orderdetails/<%= order._id %>">
            <button style="background-color:#ff69b4;">View Status</button>
          </a>
        </td>
      </tr>
    <% }); %>
  </table>
</section>


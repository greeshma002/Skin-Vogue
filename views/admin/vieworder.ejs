    <div class="container">
        <article class="card">
            <header class="card-header"> My Orders / Tracking </header>
            <div class="card-body">
                <% let currentOrderId = null; %>
                <% allProducts.forEach(product => { %>
                    <% if (product.orderId !== currentOrderId) { %>
                        <% if (currentOrderId !== null) { %>
                            </ul>
                            <hr>
                        <% } %>
                        <h6>Order ID: <%= product.orderId %></h6>
                        
                        <article class="card">
                            <div style="background-color: aliceblue;" class="card-body row">
                   
                                <div class="col">
                                    <strong>Status:</strong><br>
                                    <span id="currentStatus"><%= product.orderStatus %></span>
                                    <br>
                                    <select id="statusDropdown" <% if (product.orderStatus === 'cancelled' || product.orderStatus === 'returned') { %>disabled<% } %>>
                                      <option value="pending" <% if (product.orderStatus === 'pending') { %>selected<% } %>>Pending</option>
                                      <option value="delivered" <% if (product.orderStatus === 'delivered') { %>selected<% } %>>Delivered</option>
                                      <option value="confirmed" <% if (product.orderStatus === 'confirmed') { %>selected<% } %>>Confirmed</option>
                                      <option value="cancelled" <% if (product.orderStatus === 'cancelled') { %>selected<% } %>>Cancelled</option>
                                      <option value="returned" <% if (product.orderStatus === 'returned') { %>selected<% } %>>Returned</option>
                                    </select>
                                    <button onclick="updateStatus('<%= product.orderId %>')" <% if (product.orderStatus === 'cancelled' || product.orderStatus === 'returned') { %>disabled<% } %>>Update Status</button>
                                  </div>
                                  
                                
                                  <script>
                                    function updateStatus(orderId) {
                                      var statusDropdown = document.getElementById('statusDropdown');
                                      var currentStatus = document.getElementById('currentStatus');
                                      currentStatus.innerText = statusDropdown.value;
                                      
                                      fetch(`/admin/orderstatus/${orderId}`, {
                                        method: 'POST',
                                        headers: {
                                          'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify({  newStatus: statusDropdown.value })
                                      })
                                      .then(response => response.json())
                                      .then(data => {
                                        Toastify({
                                            text: "Successfully changed status.",
                                            duration: 3000,
                                            gravity: 'bottom',
                                            style: {
                                                background: "linear-gradient(to right, #ff69b4, #96c93d)",
                                            },
                                            }).showToast();
                                      })
                                      .catch(error => console.error('Error:', error));
                                    }
                                  </script>
                            </div>
                        </article>
                        <hr>
                        <ul class="row">
                        <% currentOrderId = product.orderId; %>
                    <% } %>
                    <li class="col-md-4">
                        <figure class="itemside mb-3">
                            <div class="aside">
                                <% if (product.image) { %>
                                    <img src="<%= product.image %>" class="img-sm border">
                                <% } else { %>
                                    <img src="<%= product.image%>" class="img-sm border"> <!-- Provide a path to a default image -->
                                <% } %>
                            </div>
                            
                            <figcaption class="info align-self-center">

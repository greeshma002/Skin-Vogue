  <div class="container mt-5" style="margin-left: 10%; margin-right: auto;">
    <h2>Coupon Management</h2>
    
    <!-- Form to add a new coupon -->
    <form method="post" action="/admin/addcoupon" class="mt-3">
      <div class="form-group">
        <label for="couponCode">Coupon Code:</label>
        <input type="text" class="form-control" name="couponCode" required>
      </div>
      <div class="form-group">
        <label for="discountPercentage">Discount Percentage:</label>
        <input type="number" class="form-control" name="discountPercentage" required>
      </div>
      <div class="form-group">
        <label for="minvalue">Min Value:</label>
        <input type="number" class="form-control" name="minvalue" required>
      </div>
      <div class="form-group">
        <label for="maxvalue">Max Value:</label>
        <input type="number" class="form-control" name="maxvalue" required>
      </div>
      <div class="form-group">
        <label for="expirationDate">Expiration Date:</label>
        <input type="date" class="form-control" name="expirationDate" required>
      </div>
      <button type="submit" class="btn btn-primary">Add Coupon</button>
    </form>
  
    <!-- Coupon list table -->
    <table class="table mt-5">
      <thead>
        <tr>
          <th>Coupon Code</th>
          <th>Discount Percentage</th>
          <th>Min Value</th>
          <th>Max Value</th>
          <th>Expiration Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (const coupon of coupons) { %>
          <tr>
            <td><%= coupon.couponCode %></td>
            <td><%= coupon.discountPercentage %>%</td>
            <td><%= coupon.minValue %></td>
            <td><%= coupon.maxValue %></td>
            <td><%= coupon.expirationDate.toISOString().split('T')[0] %></td>
            <td>Actions</td>
          </tr>
        <% } %>
      </tbody>
    </table>

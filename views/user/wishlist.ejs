<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            background-color: #eeeeee;
            font-family: poppins;
            margin: 0;
            padding: 0;
        }

        .navbar {
        
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: #ff69b4;
            color: #fff;
            width: 100%;
        }

        .brand {
            font-weight: bold;
            display: flex;
            align-items: center;
        }

        .brand img {
            margin-right: 10px;
            height: 30px;
        }

        .navbar-links {
            display: flex;
            align-items: center;
        }

        .link {
            margin: 0 15px;
            color: #fff;
            text-decoration: none;
            position: relative;
        }

        .link i {
            margin-right: 5px;
        }

       
    .container {
        background-color: #fff; /* White container background */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
    }

    .card-header {
        background-color: #ff69b4; /* Pink card header background */
        color: #fff; /* White text color */
    }

    .wishlist-container {
        background-color: white; /* Light pink background for wishlist items */
        border: 1px solid #ddd;
        border-radius: 10px;
        margin-bottom: 20px;
        padding: 20px;
    }

    .link, .btn-warning, .back-to-home-btn {
        color: #ff69b4; /* Pink text color for links and buttons */
    }

    .link:hover, .btn-warning:hover, .back-to-home-btn:hover {
        color: #ff2b00; /* Darker pink color on hover */
    }

    .btn-warning {
        background-color: #fff; /* White background for the warning button */
        border: 1px solid #ff69b4; /* Pink border */
    }

    .btn-warning:hover {
        background-color: #ff69b4; /* Darker pink color on hover */
        color: #fff; /* White text color on hover */
    }

    </style>
</head>
<body>
    <div class="navbar">
        <div class="brand">
            <img src="/assets/img/logo.png" alt="Logo">
            <div><strong>SKINVOGUE</strong></div>
        </div>
        <div class="navbar-links">
            <a href="/" class="link"><i class="fas fa-home"></i> Home</a>
            <a href="/shop" class="link"><i class="fas fa-shopping-bag"></i> Shop</a>
            <a href="/wishlist" class="link"><i class="fas fa-heart"></i> Wishlist</a>
        </div>
    </div>

    <div class="container">
        <article class="card">
            <header class="card-header"> My Wishlist </header>
            <div class="wishlist-container">
                <% if (wishlist && Array.isArray(wishlist.products)) { %>
                    <% wishlist.products.forEach(product => { %>
                        <div class="card-body row">
                            <div class="col"> 
                                <strong>Images:</strong> <br>
                                <% if (Array.isArray(product.image) && product.image.length > 0) { %>
                                    <% product.image.forEach(image => { %>
                                        <img style="width: 120px; height: 120px;" src="<%= image %>" alt="Product Image" class="wishlist-image">
                                    <% }); %>
                                <% } else { %>
                                    No images available
                                <% } %>
                            </div>
                            <div class="col"> 
                                <strong>Product Name:</strong> <br> <%= product.productName %> 
                            </div>
                            <div class="col"> 
                                <strong>Price:</strong> <br> ₹ <%= product.price %> 
                            </div>
                            <div class="d-flex flex-column align-items-center">
                                <a  href="/cart/<%= product.productId %>" class="btn mb-2" id="addToCartBtn" style="background-color: #ff69b4; color: #fff; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; text-decoration: none;">
                                    Add to Cart <i class="fas fa-shopping-cart"></i>
                                </a>
                            
                                <a href="/removewish/<%= product.productId %>">
                                    <button class="btn btn-danger">Remove</button>
                                </a>
                            </div>
                            
                            
                              
                              <script>
                                function notifyMe() {
                                  alert("We will notify you when the product is back in stock");
                                  // You can also customize this to show a modal or perform any other desired action
                                }
                              </script>
                              
                              

                            <script>
                                function showMessage(message) {
                                  alert(message); // You can replace this with your preferred pop-up library or custom implementation
                                }
                               </script>

<script>
    // Function to show a pop-up message
    function showMessage(message) {
      alert(message); // You can replace this with your preferred pop-up library or custom implementation
    }
  
    // Function to handle the click event on the "Add to Cart" button
    document.getElementById('addToCartBtn').addEventListener('click', async function(event) {
      event.preventDefault();
  
      // Make an asynchronous request to the server
      try {
        const response = await fetch(event.target.href, { method: 'GET' });
        const data = await response.json();
  
        if (response.ok) {
          // Redirect to the cart details page on successful response
          window.location.href = '/cartdetails';
        } else {
          // Show the error message in a pop-up on unsuccessful response
          showMessage(data.message);
        }
      } catch (error) {
        console.error('Error:', error);
      }
    });
  </script>
                              
                           




                        </div>
                        <hr>
                    <% }); %>
                <% } else { %>
                    <p>No products in your wishlist</p>
                <% } %>
            </div>
            <a href="/shop" class="btn btn-warning" data-abc="true"> <i class="fa fa-chevron-left"></i> Continue Shopping</a>
            <a href="/" class="back-to-home-btn" data-abc="true"> <i class="fa fa-home"></i> Back to Home</a>
        </article>
    </div>

    <script>
        const addToCart = document.getElementById("addToCart")
        addToCart.addEventListener("click",()=> {
          console.log("hii");
          Toastify({
              text: "Item added to cart!!!",
              duration: 600,
              destination: "https://github.com/apvarun/toastify-js",
              newWindow: true,
              close: true,
              gravity: "top", // top or bottom
              position: "right", // left, center or right
              stopOnFocus: true, // Prevents dismissing of toast on hover
              style: {
                background: " #228B22  ",
              },
              onClick: function(){
                alert("Toast clicked!");
              }
            }).showToast();
        })
        </script>

    

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

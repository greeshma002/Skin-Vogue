<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP - SKINVOGUE</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Add Bootstrap icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.18.0/font/bootstrap-icons.css" integrity="sha384-6Wklbvb3VBoeMprM0A27i4XeEsOu6vCbHEDe8IvZABddgc4DXYA16cg2l6b49Kou" crossorigin="anonymous">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: white;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-form {
            background-color: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
            text-align: center;
        }

        .login-heading {
            font-family: 'Arial', sans-serif;
            font-size: 28px;
            color: #333;
            margin-bottom: 10px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-top: 10px;
            color: #555;
        }

        input {
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
        }

        /* Add this CSS rule for the button */
button {
    background-color: #d6346c; /* Pink color */
    color: #fff;
    padding: 12px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 18px;
}

button:hover {
    background-color: #b02852; /* Slightly darker shade on hover */
}

    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-form">
            <h1 class="login-heading">SKINVOGUE OTP Verification</h1>
            <form action="/registerOTP" method="post">
                <input type="hidden" name="email" value="<%=email%>">
                <label for="otp">OTP:</label>
                <input name="otp" type="text" class="form-control" id="otp" placeholder="Enter OTP" required>

                
                <form class="mx-1 mx-md-4" method="post" novalidate>
                    <% if (typeof message !== 'undefined') { %>
                        <div class="alert alert-danger text-center" role="alert">
                            <%= message %>
                        </div>
                    <% } %>
                    

                <button type="submit"  class="btn btn-primary px-4 float-end mt-4">Verify OTP</button>
                <!-- Add these elements inside the form -->
                <div id="timer-container"></div>
             <button disabled type="button" id="resend-otp" class="btn btn-secondary px-4 mt-2">Resend OTP</button>

            </form>
        </div>
    </div>

    <script>
        // Set the timer duration in seconds
        const timerDuration = 60;
        let timer = timerDuration;
        let timerInterval;
    
        // Function to update the timer display
        function updateTimer() {
            document.getElementById('timer-container').innerText = `Time remaining: ${timer}s`;
        }
    
        // Function to start the timer
        function startTimer() {
            timerInterval = setInterval(() => {
                if (timer > 0) {
                    timer--;
                    updateTimer();
                } else {
                    clearInterval(timerInterval);
                    document.getElementById('resend-otp').disabled = false;
                }
            }, 1000);
        }
        
    document.addEventListener('DOMContentLoaded', () => {
        // const email = "greeshma242002@gmail.com"
        const errorMessageElement = document.getElementById('error-message');
        const resendButton = document.getElementById('resend-otp');

        // Function to resend OTP
        resendButton.addEventListener('click', async () => {
            try {
                const response = await fetch('/resendOTP', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        email: '<%=email%>',
                    }),
                });

                if (response.ok) {
                    // Reset the timer and start it again
                    timer = timerDuration;
                    updateTimer();
                    startTimer();
                    resendButton.disabled = true;
                } else {
                    // Handle error and display the error message
                    const errorMessage = await response.text();
                    throw new Error(errorMessage);
                }
            } catch (error) {
                console.error('Failed to resend OTP:', error.message);
                errorMessageElement.textContent = 'Failed to resend OTP. Please try again later.'; // Update the error message
            }
        });
    });




    
        // Initial setup
        updateTimer();
        startTimer();
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        integrity="sha512-xyz" crossorigin="anonymous" />


    
</head>

<body>
    <header>
        <!-- Jumbotron -->
        <div class="p-3 text-center bg-white border-bottom">
            <div class="container">
                <div class="row gy-3">
                    <!-- Left elements -->
                    <div class="col-lg-2 col-sm-4 col-4">
                        <a href="https://mdbootstrap.com/" target="_blank" class="float-start">
                            <div class="brand">
                                <img src="/assets/img/logo.png" height="35" />
                                <p><strong>SKINVOGUE</strong></p>
                            </div>

                        </a>
                    </div>
                    <!-- Left elements -->

                    <!-- Center elements -->
                    <div class="order-lg-last col-lg-5 col-sm-8 col-8">
                        <div class="d-flex float-end">
                            <a href="" class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center"
                                target="_blank">
                                <i class="fas fa-user-alt m-1 me-md-2"></i>
                                <p class="d-none d-md-block mb-0">Home</p>
                            </a>
                            <a href="" class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center"
                                target="_blank">
                                <i class="fas fa-heart m-1 me-md-2"></i>
                                <p class="d-none d-md-block mb-0">Wishlist</p>
                            </a>
                            <a href="" class="border rounded py-1 px-3 nav-link d-flex align-items-center"
                                target="_blank">
                                <i class="fas fa-shopping-cart m-1 me-md-2"></i>
                                <p class="d-none d-md-block mb-0">Profile</p>
                            </a>
                        </div>
                    </div>
                    <!-- Center elements -->

                    <!-- Right elements -->
                    <div class="col-lg-5 col-md-12 col-12">
                        <div class="input-group float-center">
                            <div class="form-outline">
                                <input type="search" id="form1" class="form-control" placeholder="Search" />

                            </div>
                            <button type="button" class="btn btn-primary shadow-0">
                                <i class="fas fa-search" style="color: #000000;"></i>
                            </button>
                        </div>
                    </div>
                    <!-- Right elements -->
                </div>
            </div>
        </div>
        <!-- Jumbotron -->

        <!-- Heading -->
        <div class="bg-primary">
            <div class="container py-4">
                <!-- Breadcrumb -->
                <nav class="d-flex">
                    <h6 class="mb-0">
                        <a href="" class="text-white-50">Home</a>
                        <span class="text-white-50 mx-2"> > </span>
                        <a href="" class="text-white"><u>Shopping cart</u></a>
                    </h6>
                </nav>
                <!-- Breadcrumb -->
            </div>
        </div>
        <!-- Heading -->
    </header>




    <div class="container-fluid mt-5">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col" class="text-center">Quantity</th>
                        <th scope="col" class="text-center">Price</th>
                        <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (cartdata && cartdata.product) { %>
                        <% cartdata.product.forEach(product => { %>
                            <tr>
                                <!-- Product details -->
                                <td>
                                    <div class="d-flex">
                                        <img src="<%= product.image %>" class="border rounded me-3" style="width: 96px; height: 96px;" />
                                        <div>
                                            <a href="#" class="nav-link"><%= product.productName %></a>
                                            <p class="text-muted">Yellow, Jeans</p>
                                        </div>
                                    </div>
                                </td>
                                <!-- Quantity -->
                                <td class="text-center">
                                    <text class="h6"><%= product.quantity %></text>
                                </td>
                                <!-- Price -->
                                <td class="text-center">
                                    <div>
                                        <text class="h6">$<%= product.price %></text> <br />
                                        <small class="text-muted text-nowrap"> $<%= product.price %> / per item</small>
                                    </div>
                                </td>
                                <!-- Remove button -->
                                <td class="text-center">
                                    <div class="float-md-end">
                                        <a href="/cartremove/<%= product.productId %>"><button class="btn btn-danger">Remove</button></a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">Cart is empty</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        
                        
                    </div>
                </section>
            </div>
    
            <!-- Summary Section -->
            <div class="col col-lg-4">
                <div class="d-flex flex-column align-items-center">
                    <div class="card p-3" style="border-radius: 20px;">
                        <div class="border-top pt-4 mx-4 mb-4">
                            <p><i class="fas fa-truck text-muted fa-lg"></i> Free Delivery within 1-2 weeks</p>
                            <p class="text-muted">
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                incididunt
                                ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation
                                ullamco
                            </p>
                        </div>
                        <div class="col-lg-12">
                            <div class="card mb-3 border shadow-0">
                                <div class="card-body">
                                    <form>
                                        <div class="form-group">
                                            <label class="form-label">Have coupon?</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control border" name=""
                                                    placeholder="Coupon code" />
                                                <button class="btn btn-light border">Apply</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="card shadow-0 border">
                                <div class="card-body">
                             
                                    
                                    <div class="d-flex justify-content-between">
                                        <p>Total Price: $<%= calculateTotalPrice(cartdata) %></p>
                                    </div>
                                    
            
                                    <div class="mt-3">
                                        <a href="/checkout" class="btn btn-success w-100 shadow-0 mb-2"> Make Purchase </a>
                                        <a href="#" class="btn btn-light w-100 border mt-2"> Back to shop </a>
                                    </div>
                                </div>
                            </div>
                    </div>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    


   
    <!-- Recommended -->

    <!-- footer section -->
    <footer class="footer_section">
        <div class="container">
            <p>
                &copy; <span id="displayYear"></span> All Rights Reserved By
                <a href="https://html.design/">skin vogue private limited</a>
            </p>
        </div>
    </footer>
    <!-- footer section -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>


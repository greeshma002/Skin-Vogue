<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <style>
        body {
            font-family: poppins;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: #ff69b4;
            color: #fff;
            margin-bottom: 20px;
        }

        .brand {
            font-weight: bold;
            display: flex;
            align-items: center;
        }

        .brand img {
            margin-right: 10px;
            height: 30px;
        }

        .container {
            max-width: 500px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #333;
        }

        form {
            max-width: 400px;
            margin: auto;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        input[type="submit"] {
            background-color: #ff69b4;
            color: white;
            cursor: pointer;
        }

        .error-message {
            color: red;
            margin-top: 5px;
        }
        .success-message {
            color: #5cb85c;
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="navbar">
        <div class="brand">
            <img src="/assets/img/logo.png" alt="Logo">
            <div><strong>SKINVOGUE</strong></div>
        </div>
    </div>

    <div class="container">
        <h2>Change Password</h2>
        <form action="/changepass" method="post" id="changepassForm" onsubmit="return validateForm()">
            <label for="oldPassword">Old Password:</label>
            <input type="password" id="oldPassword" name="oldPassword" required>
    
            <label for="newPassword">New Password:</label>
            <input type="password" id="newPassword" name="newPassword" required>
            <span id="newPasswordError" class="error-message"></span>
    
            <label for="confirmPassword">Confirm Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
            <span id="confirmPasswordError" class="error-message"></span>
    
           
          <div id="success-message" class="success-message">
          <% if (locals.message) { %>
           <p><%= locals.message %></p>
          <% } %>
           </div>

            <div id="error-message" class="error-message">
                <% if (locals.error) { %>
                    <p><%= locals.error %></p>
                <% } %>
            </div>
    
            <input type="submit" value="Submit">
        </form>
    
        <script>
            function validateForm() {
                // Your existing validation logic
    
               var oldPassword = document.getElementById('oldPassword').value;
                var newPassword = document.getElementById('newPassword').value;
                var confirmPassword = document.getElementById('confirmPassword').value;

                // if(!oldPassword) {
                //     document.getElementById('oldPasswordError').innerText = 'invalid old password';
                //     return false;
                // } else {
                //     document.getElementById('newPasswordError').innerText = '';
                // }
    
                if (
                    newPassword.length < 8 || /\s/.test(newPassword) || newPassword.trim() !== newPassword ||
                    !/[!@#$%^&*(),.?":{}|<>]/.test(newPassword) || /\s/.test(newPassword) ||
                    !/[A-Za-z]/.test(newPassword) || !/\d/.test(newPassword) || !/[!@#$%^&*(),.?":{}|<>]/.test(newPassword)
                ) {
                    document.getElementById('newPasswordError').innerText = 'Should contain at least 8 characters and include a character and a number.';
                    return false;
                } else {
                    document.getElementById('newPasswordError').innerText = '';
                }
    
                if (newPassword !== confirmPassword) {
                    document.getElementById('confirmPasswordError').innerText = 'Passwords do not match.';
                    return false;
                } else {
                    document.getElementById('confirmPasswordError').innerText = '';
                }
    
                // If all validations pass
                return true;
            }
        </script>
    </div>
    
    

 

   
    
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Address Form</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <style>
    body {
      margin: 0; /* Remove default body margin */
    }

    .container {
      max-width: 800px; /* Adjust the maximum width of the container */
      margin: 20px auto; /* Center the container and add some margin */
      padding: 20px; /* Add padding to the container */
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px;
      background-color: #ff69b4;
      color: #fff;
      margin-bottom: 20px; /* Add margin at the bottom to separate from the form */
    }

    .brand {
      font-weight: bold;
      display: flex;
      align-items: center;
    }

    .brand img {
      margin-right: 10px;
      height: 30px;
    }

    /* form {
      /* Your existing styles for the form */
     */

    .row {
      display: flex;
      margin-bottom: 15px;
    }

    label {
      margin-right: 10px;
      width: 120px;
      display: inline-block;
    }

    input {
      width: 100%;
    }

    button {
      background-color: #4caf50;
      color: #fff;
      padding: 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    
    button:hover {
      background-color: #45a049;
    }

    .back-to-home {
      text-align: center;
      margin-top: 20px;
    }

    .back-to-home a {
      color: #333;
      text-decoration: none;
    }

    .back-to-home a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <div class="brand">
      <img src="/assets/img/logo.png" alt="Logo">
      <div><strong>SKINVOGUE</strong></div>
    </div>
  </div>

  <div class="container">
    <% existingAddress._id%>
    <form action="/editaddress/<%=existingAddress.id %>" method="POST" onsubmit="return validateForm()">
        
            <div class="row">
                <div class="col col-lg-6">
                    <label for="fullName">Full Name:</label>
                    <input type="text" id="name" name="name" value= "<%= existingAddress.name %>"  required>
                </div>
               
            </div>

            <div class="row">
                <div class="col col-lg-6">
                    <label for="pincode">Pincode:</label>
                    <input type="text" id="pin" name="pin" value="<%=existingAddress.pin%>" required>
                </div>
                <div class="col col-lg-6">
                    <label for="street">Address:</label>
                    <input type="text" id="Address" name="Address" value="<%=existingAddress.Address%>"  required>
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-6">
                    <label for="state">State:</label>
                    <input type="text" id="state" name="state" value="<%=existingAddress.state%>" required>
                </div>
                <div class="col col-lg-6">
                    <label for="city">City:</label>
                    <input type="text" id="city" name="city" value="<%=existingAddress.city%>" required>
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-6">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="<%= existingUserId.email %>" required>
                </div>
                <div class="col col-lg-6">
                    <label for="phone">Phone Number:</label>
                    <input type="tel" id="phone" name="phone" value="<%=existingAddress.phone%>" required>
                </div>
            </div>

            

      <!-- Submit Button -->
      <button type="submit">Submit</button>
    </form>

    <!-- Your existing HTML code -->



<!-- Include the validation script -->
<script>
function validateForm() {
  // Get form values
  var fullName = document.getElementById('name').value.trim();
  var pin = document.getElementById('pin').value;
  var address = document.getElementById('Address').value.trim();
  var state = document.getElementById('state').value.trim();
  var city = document.getElementById('city').value.trim();
  var email = document.getElementById('email').value.trim();
  var phoneNumber = document.getElementById('phone').value.trim();

  // Regular expressions for validation
  var nameRegex = /^[A-Za-z\s]+$/; // Allow alphabetic characters and spaces
  var addressRegex = /^[A-Za-z0-9\s,.'-]+$/;
  var pinRegex = /^[0-9]+$/;
  var textRegex = /^[A-Za-z\s]+$/; // Allow alphabetic characters and spaces
  var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  var phoneRegex = /^[1-9]\d{9}$/;

  // Validate full name
  if (!nameRegex.test(fullName)) {
    alert('Invalid name. Please enter only alphabetic characters with spaces.');
    return false;
  }

  // Validate PIN
  if (!pinRegex.test(pin)) {
    alert('Invalid PIN. Please enter only numeric characters.');
    return false;
  }

  if (!addressRegex.test(address)) {
             alert('Invalid address. Please enter only alphabetic characters');
               return false;
  }

  // Validate address
  if (!textRegex.test(address)) {
    alert('Invalid address. Please enter only alphabetic characters with spaces.');
    return false;
  }

  // Validate state and city
  if (!textRegex.test(state) || !textRegex.test(city)) {
    alert('Invalid input for state or city. Please enter only alphabetic characters with spaces.');
    return false;
  }

  // Validate email
  if (!emailRegex.test(email)) {
    alert('Invalid email address. Please enter a valid email.');
    return false;
  }

  // Validate phone number
  if (!phoneRegex.test(phoneNumber)) {
    alert('Invalid phone number. Please enter a 10-digit number without spaces or special characters, except for zero.');
    return false;
  }

  // If all validations pass, the form will be submitted
  return true;
}
</script>


    

    <!-- Back to Home Link -->
    <div class="back-to-home">
      <a href="/cartdetails">Back to Cart</a>
    </div>
  </div>
</body>
</html>

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css?family=Open+Sans&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f8f9fa; /* Added a light background color */
            height: 100vh; /* Set the height of the body to 100% of the viewport height */
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: #ff69b4;
            color: #fff;
            width: 100%;
        }

        .brand {
            font-weight: bold;
            display: flex;
            align-items: center;
        }

        .brand img {
            margin-right: 10px;
            height: 30px;
        }

        .navbar-links {
            display: flex;
            align-items: center;
        }

        .link {
            margin: 0 15px;
            color: #fff;
            text-decoration: none;
        }

        .container {
            margin: 20px;
            height: 100%; /* Set the height of the container to 100% of the viewport height */
            overflow-y: auto; /* Add vertical scroll if needed */
        }

        .card {
            margin-bottom: 25px;
    margin-left: 1rem;
    margin-top: 2rem;
    width: 96vw;
    border: 1px solid #ddd;
    border-radius: 8px;
    max-width: 1535px;
        }

        .card-header {
            background-color: #ff69b4;
            color: #fff;
            padding: 10px;
            border-bottom: 1px solid #ddd; /* Added a border-bottom for separation */
            border-radius: 8px 8px 0 0; /* Rounded top corners */
        }

        .card-body {
            display: flex;
            flex-wrap: wrap; /* Allow flex items to wrap to the next line */
            justify-content: space-between;
            align-items: center;
            padding: 15px;
        }

        .product-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 8px; /* Added border-radius for rounded corners */
        }

        .order-details {
             /* Allow the order details to grow and take up remaining space */
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .order-meta {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
             /* Align to the right */
        }

        .order-details p strong {
            font-weight: bold;
        }

        .order-details p:not(strong) {
            font-weight: normal;
        }

        /* Styling for order details button */
        .order-details-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px; /* Added margin-top for space */
        }
    </style>
</head>

<body>
    <div class="navbar">
        <div class="brand">
            <img src="/assets/img/logo.png" alt="Logo">
            <div><strong>SKINVOGUE</strong></div>
        </div>
        <div class="navbar-links">
            <a href="/" class="link"><i class="fas fa-home"></i> Home</a>
            <a href="/shop" class="link"><i class="fas fa-shopping-bag"></i> Shop</a>
        </div>
    </div>

    <div class="container-fluid">
        <% ordersOfUser.forEach(order => { %>
            <article class="card">
                <header class="card-header">
                    <h5>Order ID: <%= order._id %></h5>
                </header>
                <div class="card-body">
                    <div class="order-details">
                        <% order.products.forEach(product => { %>
                            <div class="d-flex align-items-center">
                                <img src="<%= product.image[0] %>" alt="Product Image" class="product-image">
                                <div class="ml-3">
                                    <p><strong> <%= product.productName %> </strong></p>
                                    <p><strong>Price:</strong> <%= product.price %></p>
                                    <p><strong>Quantity:</strong> <%= product.quantity %></p>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    <div class="order-meta">
                        <p>Ordered Date: <%= new Date(order.createdAt).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        <p>Order Status: <%= (order.orderStatus) %></p>
                        <p>Payment method: <%= (order.paymentMethod) %></p>
                        <p>Total Amount: <%= (order.totalAmount) %></p>
                    </div>
                   <a href="/vieworder/<%= order._id %>"> <button class="order-details-button">View Details</button></a>
                </div>
            </article>

            <!-- Order Detail Modal -->

        <% }); %>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
